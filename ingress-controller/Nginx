Deployment

apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
  namespace: devops
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:latest



Service:

apiVersion: v1
kind: Service
metadata:
  name: nginx-service
  namespace: devops
spec:
  selector:
    app: nginx
  ports:
  - port: 80
    targetPort: 80
  type: ClusterIP
        ports:
        - containerPort: 80
